<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="SOCDisplayRelated.SOCdisplay">


    <TextView
        android:id="@+id/date_time"
        android:layout_width="172dp"
        android:layout_height="55dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="2020-05-07T20:24"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="774dp"
        android:layout_height="319dp"
        app:cardElevation="2dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="749dp"
            android:layout_height="295dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/tickorcrossimage"
                android:layout_width="329dp"
                android:layout_height="287dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.037"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.538"
                app:srcCompat="@drawable/drawingbat40" />

            <TextView
                android:id="@+id/charge"
                android:layout_width="226dp"
                android:layout_height="141dp"
                android:layout_marginTop="36dp"
                android:gravity="bottom|center_vertical"
                android:text="40.5"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textColor="#039BE5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.191"
                app:layout_constraintStart_toEndOf="@+id/tickorcrossimage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/energy"
                android:layout_width="184dp"
                android:layout_height="74dp"
                android:gravity="bottom"
                android:text="10.6"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#00C1A7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.154"
                app:layout_constraintStart_toEndOf="@+id/tickorcrossimage"
                app:layout_constraintTop_toBottomOf="@+id/charge"
                app:layout_constraintVertical_bias="0.386" />

            <TextView
                android:id="@+id/batterytype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lithium_ion_battery"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                app:layout_constraintBottom_toTopOf="@+id/tickorcrossIMAGE"
                app:layout_constraintEnd_toEndOf="@+id/tickorcrossimage"
                app:layout_constraintHorizontal_bias="0.577"
                app:layout_constraintStart_toStartOf="@+id/tickorcrossimage"
                app:layout_constraintTop_toBottomOf="@+id/tickorcrossIMAGE"
                app:layout_constraintVertical_bias="0.765" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/charge"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.34" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="129dp"
                android:layout_height="69dp"
                android:gravity="bottom|center_vertical"
                android:text="kWh"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/energy"
                app:layout_constraintTop_toBottomOf="@+id/charge"
                app:layout_constraintVertical_bias="0.346" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="620dp"
        android:layout_height="75dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.744">

        <TextView
            android:id="@+id/recommend"
            android:layout_width="598dp"
            android:layout_height="58dp"
            android:layout_marginBottom="116dp"
            android:text="Personal Message"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button"
        android:layout_width="126dp"
        android:layout_height="68dp"
        android:background="#BCB9B9"
        android:text="HELP"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/input"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:background="#32F8F8"
        android:ellipsize="marquee"
        android:onClick="onClickChargingInput"
        android:text="@string/input"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.362" />

</androidx.constraintlayout.widget.ConstraintLayout>